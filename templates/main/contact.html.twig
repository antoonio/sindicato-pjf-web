{% extends 'base.html.twig' %}

{% block title %}Contacto{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
{% endblock %}

{% block body %}
    <section id="header-snrstpjf" class="parallax-section">
        <div class="text-white text-center bg-header-contact parallax-bg">
            <h2 class="m-0 header-text animate-text" data-aos="fade-up" data-aos-delay="200">CONTACTO</h2>
        </div>
    </section>

    <section id="contact-snrstpjf">
        <div class="container py-5">
            <div class="row align-items-stretch">
                <div class="col-lg-8 d-flex flex-column">
                    <h3 class="text-uppercase subtitle-snrstpjf mb-4 text-center animate-title" data-aos="fade-down" data-aos-delay="200">Comunícate con nosotros</h3>

                    {{ form_start(form, {'attr': {'id': 'contact-form', 'class': 'flex-grow-1 d-flex flex-column'}}) }}
                        <div class="row form-field" data-aos="fade-right" data-aos-delay="300">
                            <div class="col-md-6 mb-3">
                                {{ form_widget(form.name) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_widget(form.lastname) }}
                            </div>
                        </div>

                        <div class="row form-field" data-aos="fade-left" data-aos-delay="400">
                            <div class="col-md-6 mb-3">
                                {{ form_widget(form.email) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_widget(form.phone) }}
                            </div>
                        </div>

                        <div class="row form-field" data-aos="fade-up" data-aos-delay="500">
                            <div class="col-12 mb-3">
                                {{ form_widget(form.message) }}
                            </div>
                        </div>

                        <div class="col-12 text-center" data-aos="fade-up" data-aos-delay="600">
                            <button type="submit" id="submit-btn" class="fw-bold custom-button btn btn-dark rounded-pill px-5">ENVIAR</button>
                        </div>
                    {{ form_end(form) }}
                </div>

                <div class="col-lg-4 d-flex flex-column justify-content-between map-snrstpjf">
                    <div class="ratio ratio-4x3 shadow rounded-5 mb-3 flex-grow-1 map-container" data-aos="fade-left" data-aos-delay="400">
                        <iframe
                                src="https://www.google.com/maps?q=Río+Misisipi+50,+Cuauhtémoc,+CDMX&output=embed"
                                frameborder="0"
                                allowfullscreen
                                style="border:0; width: 100%; height: 100%;"
                                class="map-frame">
                        </iframe>
                    </div>
                    <div class="d-flex align-items-center justify-content-center gap-2" data-aos="fade-up" data-aos-delay="600">
                        <img src="{{ asset('build/images/icons/location.svg') }}" alt="Icono de ubicación" class="location-icon icon-pulse">
                        <p class="mb-0 location-text text-muted text-start animate-text">
                            Río Misisipi 50, Cuauhtémoc, 06500<br>
                            Ciudad de México, CDMX (3er Piso)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="loading-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5); z-index: 9999; justify-content: center; align-items: center;">
        <div class="spinner-border text-light" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>

    <script>
        document.getElementById('contact-form').addEventListener('submit', function(event) {
            // Show loading overlay
            document.getElementById('submit-btn').style.display = 'none';
            document.getElementById('loading-overlay').style.display = 'flex';

            // Allow the form to submit normally to the server
            // The server will handle the email sending and redirect back to this page
            // with a flash message if successful
        });

        // Check for flash messages from the server
        {% for message in app.flashes('success') %}
            document.addEventListener('DOMContentLoaded', function() {
                Swal.fire({
                    title: '¡Éxito!',
                    text: '{{ message }}',
                    icon: 'success',
                    confirmButtonText: 'Aceptar'
                });
            });
        {% endfor %}
    </script>

{% endblock %}
